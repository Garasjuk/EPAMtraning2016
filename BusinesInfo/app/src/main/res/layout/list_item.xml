<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">


    <TextView
        android:id="@+id/Scale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@color/colorRed"
        android:text="Scale"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:textSize="@dimen/text_currensy"
        android:layout_alignBaseline="@+id/nameEng"
        android:layout_alignBottom="@+id/nameEng"
        android:layout_toRightOf="@+id/nameEng"
        android:layout_toEndOf="@+id/nameEng"
        android:gravity="left"/>

    <TextView
        android:id="@+id/nameEng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@color/colorRed"
        android:text="CharCode"
        android:textSize="@dimen/text_currensy"
        android:layout_below="@+id/nominal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="2dip"
        android:textColor="@color/colorPrimaryDark"
        android:text="nmae"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="Rate"
        android:textSize="@dimen/text_currensy"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_alignBaseline="@+id/Scale"
        android:layout_alignBottom="@+id/Scale"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>